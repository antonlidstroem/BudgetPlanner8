<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="EditModeButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style x:Key="EditModeVisibleButtonStyle" TargetType="Button" BasedOn="{StaticResource EditModeButtonStyle}">
        <!-- extra triggers kan läggas här senare -->
    </Style>

    <Style x:Key="CategoryComboBoxItemStyle"
       TargetType="ComboBoxItem">

        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>

        <Style.Triggers>
            <DataTrigger Binding="{Binding Type}" Value="Expense">
                <Setter Property="Background" Value="#FFEBCCCC"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding Type}" Value="Income">
                <Setter Property="Background" Value="#FFD6F0D6"/>
            </DataTrigger>
        </Style.Triggers>

    </Style>


</ResourceDictionary>