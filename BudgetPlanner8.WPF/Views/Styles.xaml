<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- COLORS -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#E0E0E0"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#37474F"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#78909C"/>
    <SolidColorBrush x:Key="TextHeaderBrush" Color="#263238"/>

    <SolidColorBrush x:Key="IncomeBrush" Color="#2E7D32"/>
    <SolidColorBrush x:Key="ExpenseBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#1976D2"/>

    <!-- CARD -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- TEXT -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextHeaderBrush}"/>
    </Style>

    <Style x:Key="LabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="ValueTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="IncomeTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
        <Setter Property="Foreground" Value="{StaticResource IncomeBrush}"/>
    </Style>

    <Style x:Key="ExpenseTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueTextStyle}">
        <Setter Property="Foreground" Value="{StaticResource ExpenseBrush}"/>
    </Style>

    <Style x:Key="TotalTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
    </Style>

    <Style x:Key="HintTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- BUTTONS -->
    <Style x:Key="EditModeButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="2"/>
    </Style>


    <!-- CATEGORY COMBOBOX ITEM STYLES -->
    <Style x:Key="CategoryComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Type}" Value="Expense">
                <Setter Property="Background" Value="#FFEBB9B9"/>
                <!-- ljus röd -->
                <Setter Property="Foreground" Value="#C62828"/>
                <!-- mörk röd text -->
            </DataTrigger>
            <DataTrigger Binding="{Binding Type}" Value="Income">
                <Setter Property="Background" Value="#D6F0D6"/>
                <!-- ljus grön -->
                <Setter Property="Foreground" Value="#2E7D32"/>
                <!-- mörk grön text -->
            </DataTrigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>
