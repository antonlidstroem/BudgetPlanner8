<UserControl x:Class="BudgetPlanner8.WPF.Views.Summaries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="280">
    <StackPanel Orientation="Vertical">
        <Border Background="#FFF8E1" Padding="15" CornerRadius="8"
        BorderBrush="#FFD54F" BorderThickness="1">
            <StackPanel>

                <TextBlock Text="Synliga transaktioner"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Inkomster:" Width="120" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding FilteredIncome, StringFormat=C}"
                       FontSize="14"
                       Foreground="Green"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Utgifter:" Width="120" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding FilteredExpenses, StringFormat=C}"
                       FontSize="14"
                       Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Summa:" Width="120" FontWeight="Bold"/>
                    <TextBlock Text="{Binding FilteredTotal, StringFormat=C}"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="DarkBlue"/>
                </StackPanel>

                <!-- Förklaring -->
                <TextBlock Text="Summerar endast de transaktioner som för närvarande visas i listan. Påverkas av filter och inkluderar engångstransaktioner."
                   FontSize="10"
                   Foreground="#666"
                   TextWrapping="Wrap"
                   Margin="0,8,0,0"/>

            </StackPanel>
        </Border>


        <Border Background="#F5F5F5" Padding="15" CornerRadius="8" BorderBrush="#CCC" BorderThickness="1">
            <StackPanel>

                <!-- Rubrik -->
                <TextBlock Text="Månadsprognos" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

                <!-- Inkomster -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Inkomster:" Width="120" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding MonthlyIncome, StringFormat=C}" FontSize="16" Foreground="Green"/>
                </StackPanel>

                <!-- Utgifter -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Utgifter:" Width="120" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding MonthlyExpenses, StringFormat=C}" FontSize="16" Foreground="Red"/>
                </StackPanel>

                <!-- Summa -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Totalt (netto):" Width="120" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MonthlyTotal, StringFormat=C}" FontSize="16" FontWeight="Bold" Foreground="DarkBlue"/>
                </StackPanel>

                <!-- Förklaring -->
                <TextBlock Text="Beräknat per månad med årsbelopp dividerat med 12 för årliga transaktioner." 
                       FontSize="10" Foreground="#666" TextWrapping="Wrap" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
