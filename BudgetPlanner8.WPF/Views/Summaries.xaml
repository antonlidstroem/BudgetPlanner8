<UserControl x:Class="BudgetPlanner8.WPF.Views.Summaries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="280">

    <StackPanel Orientation="Vertical">

        <!-- CARD 1: Synliga transaktioner -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>

                <!-- Rubrik -->
                <TextBlock Text="Synliga transaktioner"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,10"/>

                <!-- Inkomster -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Inkomster:"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding FilteredIncome, StringFormat=C}"
                               Style="{StaticResource IncomeTextStyle}"/>
                </StackPanel>

                <!-- Utgifter -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Utgifter:"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding FilteredExpenses, StringFormat=C}"
                               Style="{StaticResource ExpenseTextStyle}"/>
                </StackPanel>

                <!-- Summa -->
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Summa:"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding FilteredTotal, StringFormat=C}"
                               Style="{StaticResource TotalTextStyle}"/>
                </StackPanel>

                <!-- Förklaring -->
                <TextBlock Text="Summerar endast de transaktioner som för närvarande visas i listan. Påverkas av aktiva filter och inkluderar även engångstransaktioner."
                           Style="{StaticResource HintTextStyle}"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>

        <!-- CARD 2: Månadsprognos -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>

                <!-- Rubrik -->
                <TextBlock Text="Månadsprognos"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,10"/>

                <!-- Inkomster -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Inkomster:"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding MonthlyIncome, StringFormat=C}"
                               Style="{StaticResource IncomeTextStyle}"/>
                </StackPanel>

                <!-- Utgifter -->
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Utgifter:"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding MonthlyExpenses, StringFormat=C}"
                               Style="{StaticResource ExpenseTextStyle}"/>
                </StackPanel>

                <!-- Totalt -->
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Totalt (netto):"
                               Width="120"
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding MonthlyTotal, StringFormat=C}"
                               Style="{StaticResource TotalTextStyle}"/>
                </StackPanel>

                <!-- Förklaring -->
                <TextBlock Text="Visar månatlig prognos baserad på återkommande transaktioner. Årsbelopp delas upp över 12 månader. Engångstransaktioner exkluderas."
                           Style="{StaticResource HintTextStyle}"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>
