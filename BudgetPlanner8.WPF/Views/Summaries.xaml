<UserControl x:Class="BudgetPlanner8.WPF.Views.Summaries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="250">
    <Border Background="#EEE" Padding="10" CornerRadius="5">
        <StackPanel>
            <TextBlock Text="Total Monthly Income:" FontWeight="Bold"/>
            <TextBlock Text="{Binding MonthlyTotal, StringFormat=C}" FontSize="16"/>
        </StackPanel>
    </Border>
</UserControl>
