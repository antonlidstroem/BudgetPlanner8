<UserControl x:Class="BudgetPlanner8.WPF.Views.TransactionListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>

            <TextBlock Text="Transaktioner"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,10"/>

            <ListView ItemsSource="{Binding TransactionsView}"
                      SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}">

                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Datum" Width="90"
                                        DisplayMemberBinding="{Binding StartDate, StringFormat=d}"/>

                        <GridViewColumn Header="Slut" Width="90"
                                        DisplayMemberBinding="{Binding EndDate, StringFormat=d}"/>

                        <GridViewColumn Header="Anteckning" Width="220"
                                        DisplayMemberBinding="{Binding Description}"/>

                        <GridViewColumn Header="Kategori" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Category.Name, TargetNullValue='-'}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Återkommande" Width="110"
                                        DisplayMemberBinding="{Binding Recurrence}"/>

                        <GridViewColumn Header="Månad" Width="80"
                                        DisplayMemberBinding="{Binding Month}"/>

                        <GridViewColumn Header="%" Width="60"
                                        DisplayMemberBinding="{Binding Rate}"/>

                        <GridViewColumn Header="Brutto" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding GrossAmount, StringFormat=C}"
                                               Style="{StaticResource ValueTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Belopp" Width="95">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NetAmount, StringFormat=C}"
                                               Style="{StaticResource ValueTextStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
    </Border>
</UserControl>
