<UserControl x:Class="BudgetPlanner8.WPF.Views.TransactionListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ListView ItemsSource="{Binding TransactionsView}"
              SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Datum" Width="95" DisplayMemberBinding="{Binding StartDate, StringFormat=d}" />
                <GridViewColumn Header="Slut" Width="95" DisplayMemberBinding="{Binding EndDate, StringFormat=d}" />
                <GridViewColumn Header="Anteckning" Width="220" DisplayMemberBinding="{Binding Description}" />
                <GridViewColumn Header="Kategori" Width="140">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Category.Name, TargetNullValue='-'}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Återkommande" Width="110" DisplayMemberBinding="{Binding Recurrence}" />
                <GridViewColumn Header="Månad" Width="80" DisplayMemberBinding="{Binding Month}" />
                <GridViewColumn Header="Procentsats" Width="95" DisplayMemberBinding="{Binding Rate}" />
                <GridViewColumn Header="Brutto" Width="95">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Right"
                                       Text="{Binding GrossAmount, StringFormat=C, TargetNullValue=''}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Belopp" Width="95">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Right">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding NetAmount, StringFormat=C}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Expense">
                                                <Setter Property="Text" Value="{Binding NetAmount, StringFormat=-{0:C}}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
