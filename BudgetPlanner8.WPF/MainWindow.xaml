<Window x:Class="BudgetPlanner8.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner8.WPF"
        xmlns:views="clr-namespace:BudgetPlanner8.WPF.Views"
        mc:Ignorable="d"

        Title="Budget Planner"
        Language="sv-SE"
        SizeToContent="WidthAndHeight"
        MinWidth="1100"
        MinHeight="750"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:TransactionListView
                Grid.Column="0"
                Grid.Row="0"
                Margin="0,0,12,0" />
           
        <views:TransactionForm
        Grid.Column="1"
        Grid.Row="0"
        Margin="0,0,12,0"/>



        <views:Summaries
        Grid.Column="1"
        Grid.Row="1"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        DataContext="{Binding SummariesVM}"/>



    </Grid>
</Window>
