<Window x:Class="BudgetPlanner8.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BudgetPlanner8.WPF.Views"
        Title="Budget Planner"
        Width="1400" Height="800"
        MinWidth="1800" MinHeight="750"
        WindowStartupLocation="CenterScreen"
        Language="sv-SE">
    <!-- Här sätter vi svenska kultur -->

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Lista -->
            <ColumnDefinition Width="2*" />
            <!-- Form + Summaries -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Summaries -->
        </Grid.RowDefinitions>

        <!-- Vänster kolumn: Lista -->
        <views:TransactionListView Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                                   Margin="0,0,12,0"/>

        <!-- Höger kolumn: TransactionForm -->
        <views:TransactionForm Grid.Column="1" Grid.Row="0" Margin="0,0,0,12"/>

        <!-- Höger kolumn: Summaries -->
        <views:Summaries Grid.Column="1" Grid.Row="1" 
                         DataContext="{Binding SummariesVM}"/>
    </Grid>
</Window>
